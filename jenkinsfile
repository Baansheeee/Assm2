pipeline {
    agent any

    environment {
        FRONTEND_PORT = "8081"
        BACKEND_PORT = "3001"
        DOCKER_COMPOSE_FILE = "docker-compose.jenkins.yml"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo "üì¶ Cloning project repository..."
                git branch: 'jenkins', url: 'https://github.com/Baansheeee/Assm2.git'
            }
        }

        stage('Build & Run Containers') {
            steps {
                echo "üê≥ Starting Docker Compose build..."
                sh '''
                    echo "Stopping any running containers..."
                    docker compose -f ${DOCKER_COMPOSE_FILE} down

                    echo "Building and starting containers..."
                    docker compose -f ${DOCKER_COMPOSE_FILE} up --build -d
                '''
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "üîç Checking running containers..."
                sh "docker ps --format 'table {{.Names}}\t{{.Ports}}\t{{.Status}}'"
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful!"
            echo "Frontend: http://43.204.234.135:${FRONTEND_PORT}"
            echo "Backend: http://43.204.234.135:${BACKEND_PORT}"
        }
        failure {
            echo "‚ùå Deployment failed. Check logs above."
        }
    }
}
